<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colours -->
    <Color x:Key="ColourPrimary1">#000000</Color>
    <Color x:Key="ColourPrimary2">#00F000</Color>
    <Color x:Key="ColourPrimary3">#FFFFFF</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BrushPrimary1" Color="{StaticResource ColourPrimary1}" />
    <SolidColorBrush x:Key="BrushPrimary2" Color="{StaticResource ColourPrimary2}" />
    <SolidColorBrush x:Key="BrushPrimary3" Color="{StaticResource ColourPrimary3}" />
    
</ResourceDictionary>